<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#0b1650" android:startColor="#5a83ad" />

            <stroke android:width="1dip" android:color="#0b1650" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="90" android:endColor="#0b1650" android:startColor="#5a83ad" />

            <stroke android:width="2dip" android:color="#0b1650" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#5a83ad" android:startColor="#0b1650" />

            <stroke android:width="1dip" android:color="#0b1650" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>